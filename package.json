		"@chakra-ui/system": "^2.2.6",
		"@types/crypto-js": "^4.1.1",
		"@types/node": "^18.7.5",
		"@types/react": "^18.0.17",
		"@types/react-csv": "^1.1.3",
		"@types/react-dom": "^18.0.6",
		"@typescript-eslint/eslint-plugin": "^5.33.1",
		"@typescript-eslint/parser": "^5.33.1",
